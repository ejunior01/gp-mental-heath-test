# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_MEM_LIMIT=512m
FRONTEND_MEM_RESERVATION=256m
FRONTEND_CPUS=0.5

# Backend Configuration
BACKEND_PORT=3001
NODE_ENV=development
BACKEND_MEM_LIMIT=1g
BACKEND_MEM_RESERVATION=512m
BACKEND_CPUS=1.0

# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_database_name
DATABASE_MEM_LIMIT=1g
DATABASE_MEM_RESERVATION=512m
DATABASE_CPUS=1.0

# Worker Configuration
WORKER_MEM_LIMIT=-512m
WORKER_MEM_RESERVATION=256m
WORKER_CPUS=0.5

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=your_rabbitmq_user
RABBITMQ_DEFAULT_PASS=your_secure_password
RABBITMQ_DEFAULT_PORT=5672
RABBITMQ_MEM_LIMIT=512m
RABBITMQ_MEM_RESERVATION=256m
RABBITMQ_CPUS=0.5

# Database Configuration
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@survey_manager:5432/${POSTGRES_DB}?schema=public

# RabbitMQ Configuration
RABBITMQ_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@survey-queue:5672

